<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/whitebackground_roundedrectangle"
    android:elevation="5dp"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fav_tf_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_roundedrectangle"
        android:paddingVertical="4dp"
        android:paddingHorizontal="11dp">

        <ImageView
            android:id="@+id/fav_tf_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_transfer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/fav_tf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            app:layout_constraintLeft_toRightOf="@id/fav_tf_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fav_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Antar Rekening BCA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fav_tf_title_container"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/fav_transaction_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAYSILLA HANI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fav_transaction_title"
        android:layout_marginTop="1dp"
        android:textSize="10sp"
        android:textColor="@color/Primary100"/>

</androidx.constraintlayout.widget.ConstraintLayout>